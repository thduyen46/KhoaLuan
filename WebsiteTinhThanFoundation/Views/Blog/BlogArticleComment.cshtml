@model BlogArticleComment
<div class="bg-light rounded p-5">
    <div class="section-title section-title-sm position-relative pb-3 mb-4">
        <h3 class="mb-0">Bình luận</h3>
    </div>
    <form asp-action="AddCommentBlog" asp-controller="Blog" asp-route-BlogId="@Model.BlogArticleId">
        <div class="row g-3">
            <div class="col-12 col-sm-6">
                <input asp-for="@Model.FullName" class="form-control bg-white border-0" placeholder="Họ và tên" style="height: 55px;">
            </div>
            <div class="col-12 col-sm-6">
                <input asp-for="@Model.Email" class="form-control bg-white border-0" placeholder="Email của bạn" style="height: 55px;">
            </div>
            <div class="col-12">
                <textarea asp-for="@Model.Comment" class="form-control bg-white border-0" rows="5" placeholder="Nội dung bình luận"></textarea>
            </div>
            <div class="col-12">
                <button class="btn btn-primary w-100 py-3" type="submit">Bình luận</button>
            </div>
        </div>
    </form>
</div>