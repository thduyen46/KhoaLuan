@model WebsiteTinhThanFoundation.ViewModels.BlogArticleList

@{
    ViewData["Title"] = "Bài viết";
}

<!-- Blog Start -->
    <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <!-- Blog list Start -->
                <div class="col-lg-8">
                    <div class="row g-5">
                        @foreach(var item in Model.BlogArticles)
                        {
                            <div class="col-md-6 wow slideInUp" data-wow-delay="0.1s">
                                <div class="blog-item bg-light h-100 rounded overflow-hidden">
                                    <div class="blog-img position-relative overflow-hidden">
                                        <img class="img-fluid" src="~/img/blog-1.jpg" alt="">
                                        <a class="position-absolute top-0 start-0 bg-primary text-white rounded-end mt-5 py-2 px-4" href="#">Tình Thân</a>
                                    </div>
                                    <div class="p-4">
                                        <div class="d-flex mb-3">
                                            <small class="me-3"><i class="far fa-user text-primary me-2"></i>@(item.UserPost is null ? "" : item.UserPost.FullName)</small>
                                        <small><i class="far fa-calendar-alt text-primary me-2"></i>   @(item.CreatedOn.ToString("HH:mm dd/MM/yyyy"))</small>

                                     

                                        </div>
                                        <h4 class="mb-3">@item.Title</h4>
                                        <p>@Html.Raw(item.ShortContent)</p>
                                        <a class="text-uppercase" asp-action="Article" asp-route-Permalink="@item.Permalink">Đọc thêm<i class="bi bi-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        }
                    
                        <div class="col-12 wow slideInUp" data-wow-delay="0.1s">
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-lg m-0">
                                    <li class="page-item @(!Model.BlogArticles.HasPreviousPage ? "disabled" : "")">
                                        <a class="page-link rounded-0" href="@Url.Action("Index", new { page = Model.BlogArticles.PageNumber - 1 })" aria-label="Previous">
                                            <span aria-hidden="true"><i class="bi bi-arrow-left"></i></span>
                                        </a>
                                    </li>
                                @for (int pageNumber = 1; pageNumber <= Model.BlogArticles.PageCount; pageNumber++)
                                    {
                                        <li class="page-item @(pageNumber == Model.BlogArticles.PageNumber ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new { page = pageNumber })">@pageNumber</a>
                                        </li>
                                    }
                                    <li class="page-item @(!Model.BlogArticles.HasNextPage ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.BlogArticles.PageNumber + 1 })" @(Model.BlogArticles.HasNextPage ? "" : "disabled")>
                                            <span aria-hidden="true"><i class="bi bi-arrow-right"></i></span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- Blog list End -->
    
                <!-- Sidebar Start -->
                <div class="col-lg-4">
                    <!-- Search Form Start -->
                    <div class="mb-5 wow slideInUp" data-wow-delay="0.1s">
                        <form asp-action="Index">
                            <div class="input-group">
                                <input type="text" class="form-control p-3" name="keyword" placeholder="Keyword">
                                <button class="btn btn-primary px-4" type="submit"><i class="bi bi-search"></i></button>
                            </div>
                        </form>
                        
                    </div>
                    <!-- Search Form End -->
    
                    <!-- Recent Post Start -->
                    <div class="mb-5 wow slideInUp" data-wow-delay="0.1s">
                        <div class="section-title section-title-sm position-relative pb-3 mb-4">
                            <h3 class="mb-0">Bài viết gần đây</h3>
                        </div>
                        @foreach (var item in Model.BlogFeature)
                        {
                            <div class="d-flex rounded overflow-hidden mb-3">
                                <img class="img-fluid" src="~/img/blog-1.jpg" style="width: 100px; height: 100px; object-fit: cover;" alt="">
                                <a asp-action="" class="h5 fw-semi-bold d-flex align-items-center bg-light px-3 mb-0 w-100">
                                    @item.Title
                                </a>
                            </div>
                        }
                    </div>
                    <!-- Recent Post End -->
    
                    <!-- Tags Start -->
                    <div class="mb-5 wow slideInUp" data-wow-delay="0.1s">
                        <div class="section-title section-title-sm position-relative pb-3 mb-4">
                            <h3 class="mb-0">Gắn thẻ</h3>
                        </div>
                        <div class="d-flex flex-wrap m-n1">
                            @foreach(var item in Model.Tags)
                            {
                                <a asp-action="Index" asp-route-tagname="@item.Name" class="btn btn-light m-1">@item.Name</a>
                            }
                        </div>
                    </div>
                    <!-- Tags End -->
    
                </div>
                <!-- Sidebar End -->
            </div>
        </div>
    </div>
    <!-- Blog End -->


    <!-- Vendor Start -->
    <div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
        <div class="container py-5 mb-5">
            <div class="bg-white">
                <div class="owl-carousel vendor-carousel">
                    <img src="~/img/vendor-1.jpg" alt="">
                    <img src="~/img/vendor-2.jpg" alt="">
                    <img src="~/img/vendor-3.jpg" alt="">
                    <img src="~/img/vendor-4.jpg" alt="">
                    <img src="~/img/vendor-5.jpg" alt="">
                    <img src="~/img/vendor-6.jpg" alt="">
                    <img src="~/img/vendor-7.jpg" alt="">
                    <img src="~/img/vendor-8.jpg" alt="">
                    <img src="~/img/vendor-9.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Vendor End -->